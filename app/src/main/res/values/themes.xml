<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicineReminder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <!-- Error color. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Window animation style. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimation.MedicineReminder</item>
        <!-- Typography styles. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MedicineReminder.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MedicineReminder.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MedicineReminder.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MedicineReminder.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MedicineReminder.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MedicineReminder.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MedicineReminder.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MedicineReminder.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MedicineReminder.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MedicineReminder.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MedicineReminder.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MedicineReminder.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MedicineReminder.Overline</item>
    </style>

    <!-- Window animation style. -->
    <style name="WindowAnimation.MedicineReminder" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Typography styles. -->
    <style name="TextAppearance.MedicineReminder.Headline1" parent="TextAppearance.Material3.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Headline2" parent="TextAppearance.Material3.Headline2">
        <item name="android:textSize">28sp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Headline3" parent="TextAppearance.Material3.Headline3">
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Headline4" parent="TextAppearance.Material3.Headline4">
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Headline5" parent="TextAppearance.Material3.Headline5">
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Headline6" parent="TextAppearance.Material3.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Subtitle1" parent="TextAppearance.Material3.Subtitle1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Subtitle2" parent="TextAppearance.Material3.Subtitle2">
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Body1" parent="TextAppearance.Material3.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Body2" parent="TextAppearance.Material3.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Button" parent="TextAppearance.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Caption" parent="TextAppearance.Material3.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="TextAppearance.MedicineReminder.Overline" parent="TextAppearance.Material3.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:fontWeight">400</item>
    </style>
</resources>
